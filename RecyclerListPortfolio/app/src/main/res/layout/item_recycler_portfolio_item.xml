<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_portfolio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_view_portfolio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_portfolio"
            android:layout_toEndOf="@id/image_portfolio"
            android:text="Title" />

        <TextView
            android:id="@+id/text_view_portfolio_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_portfolio_title"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/image_portfolio"
            android:text="This is the description for the thingy" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>